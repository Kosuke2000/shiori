{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "object",
          "type",
          "index"
        ],
        "newlines-between": "always", // at least one new line between each group will be enforced, and new lines inside a group will be forbidden
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": { "order": "asc", "caseInsensitive": true },
        "pathGroups": [
          {
            "pattern": "@/hooks/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/pages/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/components/page/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/components/model/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/components/ui/**",
            "group": "internal",
            "position": "before"
          },
          { "pattern": "@/styles/**", "group": "index", "position": "before" }
        ]
      }
    ]
  }
}
